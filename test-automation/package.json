{
  "name": "user-api-cucumber-tests",
  "version": "1.0.0",
  "description": "TypeScript Cucumber tests for Java Spring Boot User API",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:dev": "cucumber-js --profile dev",
    "test:ci": "cucumber-js --profile ci",
    "build": "npm run generate:api && tsc",
    "clean": "rimraf dist generated",
    "start-app": "cd .. && mvn spring-boot:run",
    "test-with-app": "concurrently --kill-others --success first \"npm run start-app\" \"wait-on http://localhost:8080/actuator/health && npm test\"",
    "generate:api": "openapi-generator-cli generate -i ../openapi.yaml -g typescript-axios -o generated --additional-properties=configFile=openapi-generator-config.json",
    "postinstall": "npm run generate:api"
  },
  "keywords": [
    "cucumber",
    "typescript",
    "bdd",
    "api-testing",
    "spring-boot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@openapitools/openapi-generator-cli": "^2.23.0",
    "@types/chai": "^5.2.2",
    "@types/node": "^24.3.0",
    "axios": "^1.6.2",
    "chai": "^6.0.1",
    "concurrently": "^9.2.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  }
}
