{
  "name": "user-api-cucumber-tests",
  "version": "1.0.0",
  "description": "TypeScript Cucumber tests for Java Spring Boot User API",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:dev": "cucumber-js --profile dev",
    "test:ci": "cucumber-js --profile ci",
    "build": "tsc",
    "clean": "rimraf dist",
    "start-app": "cd .. && mvn spring-boot:run",
    "test-with-app": "concurrently \"npm run start-app\" \"wait-on http://localhost:8080/actuator/health && npm test\""
  },
  "keywords": [
    "cucumber",
    "typescript",
    "bdd",
    "api-testing",
    "spring-boot"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@types/node": "^24.3.0",
    "axios": "^1.6.2",
    "concurrently": "^9.2.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  }
}
