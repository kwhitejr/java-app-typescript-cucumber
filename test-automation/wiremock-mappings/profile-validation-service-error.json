{
  "request": {
    "method": "POST",
    "urlPath": "/api/profile/validate",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "contains": "error"
      }
    ]
  },
  "response": {
    "status": 500,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "error": "Internal server error",
      "message": "Profile validation service temporarily unavailable"
    },
    "fixedDelayMilliseconds": 2000
  },
  "priority": 2
}